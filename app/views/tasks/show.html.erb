<h1 class="Banner"><%= @task.title %>, just do it!</h1>
<ul class="Banner">
    <li><%= @task.title %></li>
    <li><%= @task.details %></li>
    <li><%= @task.completed %></li>
</ul>
<%= link_to 'Go back to all tasks', tasks_path %>
<%= link_to 'Edit', edit_task_path %>
<%= link_to "Delete", task_path(@task),
method: :delete, data: {confirm: "Are you sure?"} %>
